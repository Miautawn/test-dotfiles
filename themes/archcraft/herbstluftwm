hc attr theme.tiling.reset 1
hc attr theme.floating.reset 1

###################
# GLOBAL SETTINGS #
###################

# GLOBAL BOARDER SETTINGS
hc attr theme.border_width       4
hc attr theme.outer_width        2
hc attr theme.active.outer_color "#1e222a"
hc attr theme.normal.outer_color "#1e222a"

# GLOBAL TAB SETTINGS
# https://github.com/herbstluftwm/herbstluftwm/discussions/1520
hc attr theme.active.color '#D8D8D8'    # focused tab color in the focused client
hc attr theme.active.tab_color '#808080'    # unfocused tab color in the focused client
hc attr theme.normal.color '#808080'    # focused tab color in the unfocused client

# GLOBAL TITLE SETTINGS
hc attr theme.title_font  '0xProto Nerd Font Mono:pixelsize=0'
hc attr theme.title_align center
hc attr theme.title_height 13
hc attr theme.title_depth 7
hc attr theme.title_when "multiple_tabs"
hc attr theme.active.title_color '#D8D8D8'
hc attr theme.normal.title_color '#808080'

# GLOBAL FRAME SETTINGS
hc set show_frame_decorations 'if_multiple'
hc set frame_border_width 2
hc set frame_bg_transparent on
hc set frame_transparent_width 0
hc set frame_gap 0
hc set frame_padding 0

hc set frame_border_active_color '#D8D8D8'
hc set frame_bg_active_color '#D8D8D8'
hc set frame_border_normal_color '#1e222a'
hc set frame_bg_normal_color '#1e222a'

# GLOBAL MISCELANIOUS
hc set window_gap 15
hc set smart_window_surroundings off
hc set smart_frame_surroundings on
hc set mouse_recenter_gap 0

############################
# FLOATING WINDOW SETTINGS #
############################
hc attr theme.floating.title_when "always"
hc attr theme.floating.active.color '#808080'
hc attr theme.floating.title_color '#808080'
hc attr theme.floating.active.outer_color "#D8D8D8"
hc attr theme.floating.normal.outer_color "#1e222a"

