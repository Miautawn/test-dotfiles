# ls
alias ls="ls -CF --color=auto"		    	# force ls to show file types

# cat
alias cat=bat

# mkdir
alias mkdir="mkdir -pv"			        # create intermediatary directories

# fc
alias fc="fc -e 'vim'"                  	# run fc with vim
alias fcc="fc -e 'code --wait'"         	# run fc with vscode

# nnn
alias nnn="nnn -A -H -e"

# fzf
alias fzf="fzf --print0 | xargs -0 -o $EDITOR"

# find replacement
alias find="fd"

# vmip docker run
alias vmip-docker="docker run -it -e REQUEST_TRACKING_ENABLED=false -e FEATURE_SERVER_URI=fake.uri:1234 -e KAFKA_BOOTSTRAP_SERVERS='[\"mock\"]' -e KAFKA_REQUEST_TRACKING_TOPIC=mock -p 8501:8501"

# correct wrapper of gsutil, so the permissions would apply from gcloud authentication
alias gsutil="/Users/martynasjasinskas/opt/google-cloud-sdk/bin/gsutil"

# ssh into phishing message filter remote dev environment
alias ssh-rde-phishing-message-filter="gcloud compute ssh mlp-remote-dev-env --project=dv-mkp-smf-sb"
